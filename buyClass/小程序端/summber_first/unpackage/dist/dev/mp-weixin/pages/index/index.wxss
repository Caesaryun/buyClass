.search-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
}
.search-container .logo {
  width: 60rpx;
  margin-right: 20rpx;
}
.search-container .search-bar {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex-grow: 1;
          flex-grow: 1;
}
.search-container .search-bar .search-icon {
  position: absolute;
  left: 19rpx;
  top: 20rpx;
}
.search-container .search-bar .search {
  border: solid 2rpx #f2f2f2;
  font-size: 28rpx;
  height: 60rpx;
  border-radius: 5rpx;
  padding-left: 60rpx;
  padding-right: 15rpx;
}
.swiper-container {
  height: 450rpx;
  margin-top: 20rpx;
}
.swiper-container .swiper-image {
  width: 100%;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.curriculum-name {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 60rpx;
}
.curriculum-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 48rpx;
}
.teacher {
  font-size: 26rpx;
  color: #999;
  line-height: 48rpx;
}
.type-icon {
  min-width: 160rpx;
  max-width: 160rpx;
  margin-left: 20rpx;
}
.hot-container {
  margin: 30rpx 20rpx 0 20rpx;
}
.hot-container .hot-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.hot-container .hot-content .info {
  margin-left: 20rpx;
}
.refined-container {
  margin: 30rpx 20rpx 0 20rpx;
}
.refined-container .tab-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  margin-bottom: 20rpx;
}
.refined-container .tab-container .tab {
  font-size: 30rpx;
  padding-bottom: 10rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
}
.refined-container .tab-container .active {
  border-bottom: solid 4rpx #33c9ff;
}
.refined-container .tab-page-container .page {
  display: none;
}
.refined-container .tab-page-container .page .refined-content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: solid 20rpx #f0f0f0;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.refined-container .tab-page-container .page .refined-content .info {
  margin-left: 20rpx;
}
.refined-container .tab-page-container .page .refined-content:last-of-type {
  border-bottom: none;
}
.refined-container .tab-page-container .active {
  display: block;
}
.refined-container .tab-page-container .btn {
  background-color: #33c9ff;
  color: #fff;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-bottom: 40rpx;
  font-size: 30rpx;
}

