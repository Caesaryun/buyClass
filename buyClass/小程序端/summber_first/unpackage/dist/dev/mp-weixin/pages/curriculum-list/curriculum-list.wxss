.curriculum-content {
  margin-left: 20rpx;
  margin-right: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  border-bottom: solid 20rpx #f0f0f0;
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.curriculum-content .info {
  margin-left: 20rpx;
}
.curriculum-content:last-of-type {
  border-bottom: none;
}
.curriculum-content:first-of-type {
  margin-top: 20rpx;
}
.curriculum-name {
  font-size: 34rpx;
  font-weight: bold;
  line-height: 60rpx;
}
.curriculum-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 48rpx;
}
.teacher {
  font-size: 26rpx;
  color: #999;
  line-height: 48rpx;
}
.type-icon {
  min-width: 160rpx;
  max-width: 160rpx;
  margin-left: 20rpx;
}

